class Solution {
public:
    int firstMissingPositive(vector<int>& nums) {
        int i,n=nums.size(),c=0;
        for(i=0;i<n;i++){
            if(nums[i]==1)  c=1;
            if(nums[i]>n || nums[i]<=0)   nums[i]=1;
        }
        if(c==0)    return 1;
        for(i=0;i<n;i++){
            int index=abs(nums[i])-1;
            nums[index]=-abs(nums[index]);
        }
        for(i=0;i<n;i++)
            if(nums[i]>0)   return i+1;
        return n+1;
    }
};
